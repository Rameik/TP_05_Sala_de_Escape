<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"] - Sala de Escape</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <link rel="icon" href="/cohete.ico">
    </head>
    <body>
        <header style="position:fixed; top: 0; margin: 10px 0px 20px 0px;">
            <img class="cohete-imagen" src="/cohete.png" alt="" id="menu-trigger">
            <nav class="navegador">
                <ul id="menu">
                    <li><a href='@Url.Action("Index")'>Inicio</a></li>
                    <li><a href='@Url.Action("Tutorial")'>Tutorial</a></li>
                    <li><a href='@Url.Action("Creditos")'>Creditos</a></li>
                </ul>
            </nav>
        </header>
        
        <div style="padding:20px 10px 0px 10px;">
            @RenderBody()
        </div>

        <footer style="z-index: 4;">
                &copy; @DateTime.Now.Year - Taller de Programación - TP 05 Sala de Escape
        </footer>
        <script src="/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
